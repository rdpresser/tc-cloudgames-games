{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AzureMonitor": {
    "_comment": "Azure Monitor / Application Insights configuration. SamplingRatio: 1.0 = 100%, 0.5 = 50%, 0.1 = 10%",
    "SamplingRatio": 1.0
  },
  "FeatureFlags": {
    "ElasticsearchEnabled": false
  },
  "MessageBroker": {
    "Type": "AzureServiceBus"
  },
  "Cache": {
    "Host": "<prod-cache-host>",
    "Port": 6380,
    "Password": "<prod-cache-password>",
    "InstanceName": "TC.CloudGames.Games.Api:",
    "Secure": true
  },
  "AzureServiceBus": {
    "ConnectionString": "",
    "Namespace": "%AZURE_SERVICEBUS_NAMESPACE%",
    "TopicName": "game.events",
    "UsersTopicName": "user.events",
    "PaymentsTopicName": "payment.events",
    "AutoProvision": true,
    "MaxDeliveryCount": 10,
    "EnableDeadLettering": true,
    "AutoPurgeOnStartup": false,
    "UseControlQueues": true
  },
  "Database": {
    "Host": "<prod-db-host>",
    "Port": 5432,
    "Name": "tc-cloudgames-games-db",
    "MaintenanceDatabase": "postgres",
    "User": "<prod-db-user>",
    "Password": "<prod-db-password>",
    "Schema": "public",
    "ConnectionTimeout": 30
  },
  "Elasticsearch_Local": {
    "Host": "localhost",
    "Port": 9200,
    "Username": "elastic",
    "Password": "changeme",
    "IndexPrefix": "games"
  },
  "Elasticsearch": {
    "EndpointUrl": "%ELASTICSEARCH_ENDPOINTURL%",
    "ApiKey": "%ELASTICSEARCH_APIKEY%",
    "IndexPrefix": "%ELASTICSEARCH_INDEXPREFIX%",
    "RequestTimeoutSeconds": 30,
    "MaxSearchSize": 1000
  },
  "Grafana": {
    "_comment": "Grafana Agent Configuration - Agent is required in Production. Logs go via stdout, metrics via /metrics endpoint.",
    "Agent": {
      "Host": "grafana-agent.monitoring.svc.cluster.local",
      "OtlpGrpcPort": 4317,
      "OtlpHttpPort": 4318,
      "MetricsPort": 12345,
      "Enabled": true
    },
    "Otlp": {
      "Endpoint": "http://grafana-agent.monitoring.svc.cluster.local:4317",
      "Protocol": "grpc",
      "Headers": null,
      "TimeoutSeconds": 10,
      "Insecure": false
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "TC.CloudGames.Games.Api"
    }
  }
}