{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "FeatureFlags": {
    "ElasticsearchEnabled": false
  },
  "MessageBroker": {
    "Type": "RabbitMQ"
  },
  "Database": {
    "Host": "localhost",
    "Port": 65432,
    "Name": "tc-cloudgames-games-db",
    "MaintenanceDatabase": "postgres",
    "User": "postgres",
    "Password": "postgres",
    "Schema": "public",
    "ConnectionTimeout": 30
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": 55672,
    "VirtualHost": "/",
    "UserName": "guest",
    "Password": "guest",
    "Exchange": "game.events",
    "ListenUserExchange": "user.events",
    "ListenPaymentExchange": "payment.events",
    "AutoProvision": true,
    "Durable": true,
    "UseQuorumQueues": false,
    "AutoPurgeOnStartup": false
  },
  "AzureServiceBus": {
    "ConnectionString": "Endpoint=sb://<namespace>.servicebus.windows.net/;SharedAccessKeyName=<key-name>;SharedAccessKey=<key-value>",
    //"Namespace": "<namespace>.servicebus.windows.net",
    "TopicName": "game.events",
    "UsersTopicName": "user.events",
    "PaymentsTopicName": "payment.events",
    "AutoProvision": true,
    "MaxDeliveryCount": 10,
    "EnableDeadLettering": true,
    "AutoPurgeOnStartup": false,
    "UseControlQueues": true
  },
  "Cache": {
    "Host": "localhost",
    "Port": 56379,
    "Password": "Redis@123",
    "InstanceName": "TC.CloudGames.Games.Api:",
    "Secure": false
  },
  "Elasticsearch_Local": {
    "Host": "localhost",
    "Port": 9200,
    "Username": "elastic",
    "Password": "changeme",
    "IndexPrefix": "games"
  },
  "Elasticsearch": {
    "EndpointUrl": "https://my-elasticsearch-project-f61917.es.eastus.azure.elastic.cloud:443",
    "ApiKey": "YOUR_API_KEY_HERE",
    "IndexPrefix": "search-xn8c",
    "RequestTimeoutSeconds": 30,
    "MaxSearchSize": 1000
  },
  "GrafanaCloud": {
    "GrafanaLogsApiToken": "<placeholder for GRAFANA_LOGS_API_TOKEN>",
    "GrafanaOtelPrometheusApiToken": "<placeholder for GRAFANA_OTEL_PROMETHEUS_API_TOKEN>",
    "GrafanaOtelResourceAttributes": "service.name=tccloudgames-games,service.namespace=tccloudgames,deployment.environment=production",
    "OtelExporterOtlpEndpoint": "https://otlp-gateway-prod-sa-east-1.grafana.net/otlp",
    "OtelExporterOtlpProtocol": "http/protobuf",
    "OtelExporterOtlpHeaders": "<placeholder for OTEL_EXPORTER_OTLP_HEADERS>",
    "GrafanaLogsLokiEndpoint": "https://logs-prod-024.grafana.net"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Wolverine": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "https://logs-prod-024.grafana.net",
          "credentials": {
            "username": "1267846",
            "password": "%GRAFANA_LOGS_API_TOKEN%"
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "TC.CloudGames.Games.Api"
    }
  }
}
