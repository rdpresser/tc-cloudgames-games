{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "FeatureFlags": {
    "ElasticsearchEnabled": false
  },
  "MessageBroker": {
    "Type": "RabbitMQ"
  },
  "Database": {
    "Host": "localhost",
    "Port": 65432,
    "Name": "tc-cloudgames-games-db",
    "MaintenanceDatabase": "postgres",
    "User": "postgres",
    "Password": "postgres",
    "Schema": "public",
    "ConnectionTimeout": 30
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": 55672,
    "VirtualHost": "/",
    "UserName": "guest",
    "Password": "guest",
    "Exchange": "game.events",
    "ListenUserExchange": "user.events",
    "ListenPaymentExchange": "payment.events",
    "AutoProvision": true,
    "Durable": true,
    "UseQuorumQueues": false,
    "AutoPurgeOnStartup": false
  },
  "AzureServiceBus": {
    "ConnectionString": "%AZURE_SERVICEBUS_CONNECTIONSTRING%",
    "Namespace": "",
    "TopicName": "game.events",
    "UsersTopicName": "user.events",
    "PaymentsTopicName": "payment.events",
    "AutoProvision": true,
    "MaxDeliveryCount": 10,
    "EnableDeadLettering": true,
    "AutoPurgeOnStartup": false,
    "UseControlQueues": true
  },
  "Cache": {
    "Host": "localhost",
    "Port": 56379,
    "Password": "Redis@123",
    "InstanceName": "TC.CloudGames.Games.Api:",
    "Secure": false
  },
  "Elasticsearch_Local": {
    "Host": "localhost",
    "Port": 9200,
    "Username": "elastic",
    "Password": "changeme",
    "IndexPrefix": "games"
  },
  "Elasticsearch": {
    "EndpointUrl": "%ELASTICSEARCH_ENDPOINTURL%",
    "ApiKey": "%ELASTICSEARCH_APIKEY%",
    "IndexPrefix": "%ELASTICSEARCH_INDEXPREFIX%",
    "RequestTimeoutSeconds": 30,
    "MaxSearchSize": 1000
  },
  "Grafana": {
    "_comment": "Grafana Agent Configuration - Set Agent.Enabled=true to export traces via OTLP. If false, traces are generated but not exported. Logs go via stdout, metrics via /metrics endpoint.",
    "Agent": {
      "Host": "localhost",
      "OtlpGrpcPort": 4317,
      "OtlpHttpPort": 4318,
      "MetricsPort": 12345,
      "Enabled": false,
      "_comment": "Set Enabled=false during development if Grafana Agent is not running"
    },
    "Otlp": {
      "Endpoint": "http://localhost:4317",
      "Protocol": "grpc",
      "Headers": null,
      "TimeoutSeconds": 10,
      "Insecure": true,
      "_comment": "Endpoint is auto-built from Agent.Host and ports when Agent.Enabled=true"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "TC.CloudGames.Games.Api"
    }
  }
}
